{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "printWidth": 100,
    "htmlWhitespaceSensitivity": "css",
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}