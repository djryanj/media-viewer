{
    "name": "media-viewer-frontend",
    "version": "0.0.1",
    "description": "Media Viewer Frontend",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint js/**/*.js",
        "lint:css": "stylelint css/**/*.css",
        "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
        "lint:js:fix": "eslint js/**/*.js --fix",
        "lint:css:fix": "stylelint css/**/*.css --fix",
        "format": "prettier --write \"js/**/*.js\" \"css/**/*.css\" \"*.html\"",
        "format:check": "prettier --check \"js/**/*.js\" \"css/**/*.css\" \"*.html\"",
        "check": "npm run lint && npm run format:check",
        "dev": "browser-sync start --server --files \"**/*.html, js/**/*.js, css/**/*.css\"",
        "dev:proxy": "browser-sync start --proxy \"localhost:8080\" --files \"**/*.html, js/**/*.js, css/**/*.css\"",
        "test": "npm run test:unit:only && npm run test:integration && npm run test:e2e",
        "test:unit": "vitest run",
        "test:unit:only": "vitest run tests/unit",
        "test:integration": "vitest run tests/integration",
        "test:unit:watch": "vitest",
        "test:unit:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:unit:coverage": "vitest run tests/unit --coverage",
        "test:integration:coverage": "vitest run tests/integration --coverage",
        "test:file": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:ui": "playwright test --ui --host 0.0.0.0",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report e2e/playwright-report --host 0.0.0.0",
        "test:e2e:codegen": "playwright codegen http://localhost:8080",
        "test:e2e:coverage": "node e2e/generate-coverage-report.js --all"
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@playwright/test": "^1.48.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/user-event": "^14.5.0",
        "@vitest/coverage-v8": "^2.1.0",
        "@vitest/ui": "^2.1.0",
        "browser-sync": "^3.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^50.0.0",
        "globals": "^15.0.0",
        "happy-dom": "^15.7.0",
        "msw": "^2.6.0",
        "prettier": "^3.2.0",
        "stylelint": "^16.2.0",
        "stylelint-config-standard": "^36.0.0",
        "vitest": "^2.1.0"
    },
    "dependencies": {
        "sharp": "^0.34.5"
    }
}
